<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/item_info_img_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/item_info_txt_os"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_info_img_icon"
        android:textColor="@color/white"
        tools:text="Sistema operacional: Android 6.0" />

    <TextView
        android:id="@+id/item_info_txt_apps_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_info_txt_os"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_info_img_icon"
        android:text="Aplicativos instalados"
        android:textColor="#aaffffff" />

    <TextView
        android:id="@+id/item_info_txt_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_info_txt_apps_title"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_info_img_icon"
        android:textColor="#69ffffff"
        tools:text="Facebook, Tinder, Instagram, Orkut" />

    <TextView
        android:id="@+id/item_info_txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_info_txt_apps"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_info_img_icon"
        android:textColor="#aaffffff"
        tools:text="SÃ£o Paulo - SP" />

</RelativeLayout>