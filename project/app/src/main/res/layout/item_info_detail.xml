<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/item_info_detail_img_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        tools:background="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_info_detail_img_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_info_detail_txt_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="22sp"
            tools:text="Netflix" />

        <TextView
            android:id="@+id/item_info_detail_txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_info_detail_txt_app"
            android:layout_marginLeft="8dp"
            android:text="Aplicativo instalado"
            android:textColor="@color/colorSecondaryText" />
    </LinearLayout>

</RelativeLayout>